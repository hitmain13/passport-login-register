<%- include('./partial/header') %>
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body">
                <h1 class="text-center mb-3">
                    <i class="fas fa-user-plus"></i>
                    <p>Registro de nova conta</p>
                </h1>
                <%- include('./partial/messages') %>
                <form action="/users/register" method="POST">
                    <div class="form-group">
                        <label for="name">Nome</label>
                        <input type="name" id="name" name="name" class="form-control" placeholder="Digite seu nome"
                            value="<%= typeof name != 'undefined' ? name : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="email">E-mail</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Digite seu e-mail"
                            value="<%= typeof email != 'undefined' ? email : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control"
                            placeholder="Crie sua senha"
                            value="<%= typeof password != 'undefined' ? password : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="password2">Confirmar Password</label>
                        <input type="password" id="password2" name="password2" class="form-control"
                            placeholder="Confirme sua senha"
                            value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">
                        Registrar </button>
                </form>
                <p class="lead mt-4">JÃ¡ tem uma conta?
                    <a href="/users/login">Login</a>
                </p>
            </div>
        </div>
    </div>